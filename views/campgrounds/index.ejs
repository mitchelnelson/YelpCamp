  <% layout('/layouts/boilerplate') %>

  <!-- <div id="cluster-map"></div> -->
  <h1>All Campgrounds</h1>
  <% for (let camp of campground) {%> 
    <div class="card mb-3">
      <div class="row">
        <div class="col-md-4">
          <% if (camp.images.length){ %> 
          <img class="img-fluid" src="<%=camp.images[0].url%>" alt="Campground">
          <% } else { %> 
          <img src="https://lh3.googleusercontent.com/proxy/BlSOt63HAKCLm1kSPC56AVi5EAIBflzJ-KAhnHmC3jZ-zKCJ2NazBXXw2C7DhwTgRzPRZBPNOyT8le1CY-oN_Twt1Fd3DrA" alt="">
          <% } %> 
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= camp.title %></h5>
            <p class="card-text"><%= camp.description %></p>
            <p class="card-text">
              <small class="text-muted"><%= camp.location%></small>
            </p>
            <a class="btn btn-primary" href="/campgrounds/<%=camp._id%>">View Campground</a>
          </div>
        </div>
      </div>
    </div>
  <% } %>

  <script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
    const campground = {features: <%- JSON.stringify(campground) %>}
  </script>

  <script src="/JavaScripts/clusterMap.js"></script>